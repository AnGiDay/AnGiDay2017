<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="227dp"
        android:layout_weight="0.21"
        android:gravity="center"
        android:background="@drawable/res_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quán Đồng Quê"
                android:textColor="@color/colorTextLight"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điện thoại : 0123456789"
                android:textColor="@color/colorTextLight"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ : Trạm xe bus vòng xoay chợ đêm "
                android:textColor="@color/colorTextLight"
                android:textSize="20dp"
                android:id="@+id/textView3" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <RatingBar
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/colorTextDark"
            android:text="Còn 20 chổ trống "
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colorTextDark"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="15 móm ăn"
            android:textSize="25dp" />
    </LinearLayout>
</LinearLayout>